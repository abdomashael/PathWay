<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:innerRadius="@android:dimen/dialog_min_width_major" android:shape="rectangle" android:thickness="@android:dimen/app_icon_size">
            <gradient android:angle="-90" android:endColor="@android:color/white" android:startColor="@android:color/white" />
            <corners android:radius="50dp"></corners>
            <stroke android:width="5dp" android:color="@color/colorPrimaryDark"></stroke>

        </shape>


    </item>
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:innerRadius="@android:dimen/dialog_min_width_major" android:shape="rectangle" android:thickness="@android:dimen/app_icon_size">
            <gradient android:angle="0" android:endColor="@color/colorPrimary" android:startColor="@color/colorPrimary" />
            <corners android:radius="50dp" />
            <stroke android:width="5dp" android:color="@color/colorPrimaryDark" />

        </shape>


    </item>

</selector>
